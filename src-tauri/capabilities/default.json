{
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:webview:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "python",
          "cmd": "python",
          "args": true
        },
        {
          "name": "google-ads-login",
          "cmd": "python",
          "args": ["scripts/google_ads_manager.py", "--login"]
        }
      ]
    }
  ],
  "platforms": ["windows", "macOS", "linux"]
}